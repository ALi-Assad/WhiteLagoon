@model IEnumerable<VillaNumber>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white p-2">Villa Number List</h2>
            </div>
        </div>
    </div>
    <div class="card-bode border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end mb-2">
                <a asp-controller="villaNumber" asp-action="create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Create New Villa Number
                </a>
            </div>
            <table class="table table-bordered table-striped">
                <tr>
                    <th>Villa Number</th>
                    <th>Special Details</th>
                    <th>Villa Name</th>
                    <th></th>
                </tr>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Villa_Number</td>
                        <td>@obj.SpecialDetails</td>
                        <td>@obj.Villa.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="update" asp-route-villaNumber="@obj.Villa_Number"
                                   class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </div>
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <form action="/villaNumber/delete" method="post">
                                    <input name="Villa_Number" value="@obj.Villa_Number" hidden />
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>